    {
      "id": "thermo_005",
      "skill_id": "thermodynamics",
      "type": "numeric",
      "difficulty": 0.4,
      "question": {
        "content": "A 0.5 kg piece of copper at 100 C is placed in 1 kg of water at 20 C. Find the final equilibrium temperature. (c_Cu = 385 J/kg*K, c_water = 4186 J/kg*K)",
        "widgets": {
          "numeric-input 1": {
            "type": "numeric-input",
            "options": {
              "value": 23.4,
              "tolerance": 0.02,
              "inexact": true
            }
          }
        }
      },
      "answer": {
        "value": 23.4,
        "unit": "C",
        "tolerance": 0.02
      },
      "hints": [
        "Heat lost by copper = Heat gained by water",
        "m_Cu*c_Cu*(T_hot - T_f) = m_w*c_w*(T_f - T_cold)",
        "Solve for T_f (final temperature)"
      ],
      "solution": {
        "steps": [
          "Heat lost by copper = Heat gained by water",
          "m_Cu*c_Cu*(100 - T_f) = m_w*c_w*(T_f - 20)",
          "0.5 x 385 x (100 - T_f) = 1 x 4186 x (T_f - 20)",
          "192.5(100 - T_f) = 4186(T_f - 20)",
          "19250 - 192.5*T_f = 4186*T_f - 83720",
          "102970 = 4378.5*T_f",
          "T_f = 23.5 C"
        ],
        "final_answer": "23.4 C"
      },
      "tags": ["calorimetry", "equilibrium-temperature"]
    },
